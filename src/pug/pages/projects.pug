
extends ../layout/main
block variable
  -
    var title_page = 'projects'
    var id_page = 'id-page-projects'
    var class_page = 'class-page-projects'
    var breadcrumbsSubitem = [
      {
        label: 'About',
        link: pagesLink[0].about
      }
    ]
  
block meta
  title= title_page
  meta(name='description', content='')
block head
    link(rel='stylesheet', href="./assets/styles/main.min.css")
block scripts
  script(defer src='./assets/scripts/vendors.bundle.js')
  script(defer src='./assets/scripts/index.bundle.js')
  script(defer src='./assets/scripts/projects.bundle.js')
block content
  .screen-contain.home-front-screen
    button(type="button" data-down-arrow).text-style-1920-subtitle.text-white.home-front-screen__helper
      <svg width="22" height="26" viewBox="0 0 22 26" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M1.47058 14.8988L11 24.2203M11 24.2203L20.5294 14.8988M11 24.2203C11 18.6965 11 6.47502 11 1.77979" stroke="white" stroke-width="2" stroke-linecap="round"/>
      </svg>
    .home-front-screen__content  
      div.text-style-1920-h-1.text-color-white.home-front-screen__text1 company projects
      .home-front-screen__slider
        .home-front-screen__slider-lines-wrapper
          .home-front-screen__slider-line
            .home-front-screen__slider-line-item
            .home-front-screen__slider-line-bg
      div.home-front-screen__subtitle.text-style-1920-h-4.text-color-white innovation
      div.home-front-screen__description.text-style-1920-h-5.text-color-white Check out some of our best projects that combine innovation, quality, and unique design to create luxury homes. Each project is the result of our attention to detail, commitment to excellence, and the creation of luxurious homes that reflect the individuality of each client.
    .home-front-screen__bg
      img(src="./assets/images/projects/front-bg.jpg" alt="home-front-screen-bg" loading="lazy")
  include ./projects/projects-list.pug
block footer
  include ../includes/footer.pug

block header
  include ../includes/header.pug
